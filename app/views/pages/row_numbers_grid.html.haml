- ajax_grid @pages do
  - title "Row Number Grid with Color Class Example"
  - panel do
    .gz_buttons_top
      .gz_button= action_function "Approve", "notify_user", :class => 'send_message'
    .clear
  - rows do |page|
    - row_number_column :class => (page.id.to_i % 2 == 0) ? 'red' : '', :style => 'width: 45px;'
    - column "Name", :class => (page.id.to_i % 2 == 0) ? 'red' : ''  do
      = link_to page.name, page
    - column "Description", :class => (page.id.to_i % 2 == 0) ? 'red' : '' do
      = page.description
    - if_empty do
      No pages to display at this time
  - panel do
    = pagination_links

